---
import ProjectsItem from "./ProjectsItem.astro";
import type { Props as ProjectItemProps } from "./ProjectsItem.astro";
import proyecto1 from '../assets/projects/proyecto1.webp';
import proyecto2 from '../assets/projects/proyecto2.webp';

const PROJECTS: ProjectItemProps[] = [
  {
    title: "2ISI",
    description:
      `Dashboard para Discord que recopila datos de tus servidores mediante un Bot y los muestra en gráficos dinámicos e interactivos.`,
    image: proyecto1,
    tags: ["Flask", "Angular", "Azure", "Docker", "gRPC"],
    github: "https://github.com/Javit-Dev/isi-2isi",
  },
  {
    title: "IPOkemon",
    description:
      `Aplicación de escritorio creada en .NET y C# que permite simular batallas entre Pokémon, desarrollada para la asignatura de IPO 2.`,
    image: proyecto2,
    tags: [".NET", "C#", "WPF"],
    github: "https://github.com/Javit-Dev/IPOkemon",
  },
];
---

<ol class="space-y-12">
{PROJECTS.map((project) => (
    <li>
    <ProjectsItem {...project} />
    </li>
))}
</ol>
