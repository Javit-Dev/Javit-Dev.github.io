---
interface Props{
  title: string;
  description: string;
  image: string;
  tags: string[];
  link?: string;
  github?: string;
}
const { title, description, image, tags, link, github } = Astro.props;
---

<article
  class="max-w-lg w-full bg-white border border-gray-200 rounded-2xl shadow
         dark:bg-gray-800 dark:border-gray-700 overflow-hidden"
>
  <img
    src={image}
    alt={`Imagen de ${title}`}
    class="w-full aspect-video object-cover"
    loading="lazy"
    decoding="async"
  />
  <div class="p-5">
    <h3 class="mb-2 text-2xl font-semibold tracking-tight text-gray-900 dark:text-white">
      {title}
    </h3>

    <p class="mb-4 text-sm text-gray-700 dark:text-gray-300">
      {description}
    </p>

    <ul class="flex flex-wrap gap-2 mb-4">
      {tags.map((t) => (
        <li
          class="px-2 py-1 text-xs rounded-md bg-gray-100 text-gray-700 border border-gray-200/60
                 dark:bg-gray-700 dark:text-gray-200 dark:border-gray-600/60"
        >
          {t}
        </li>
      ))}
    </ul>

    <div class="flex gap-3">
      {link && (
        <a
          href={link}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-blue-700 rounded-lg
                 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300
                 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        >
          Demo
        </a>
      )}
      {github && (
        <a
          href={github}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-3 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg
                 hover:bg-gray-100 hover:text-blue-700 focus:ring-4 focus:outline-none focus:ring-gray-200
                 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:text-white dark:focus:ring-gray-700"
        >
          CÃ³digo
        </a>
      )}
    </div>
  </div>
</article>
